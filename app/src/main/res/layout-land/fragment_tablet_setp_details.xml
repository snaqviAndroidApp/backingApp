<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ui.frags.tablet.StepClips">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- activity_player.xml-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>


            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <LinearLayout android:id="@+id/controls_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button android:id="@+id/btnSelect_tracks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/track_selection_title"
                    android:enabled="false"/>
            </LinearLayout>

        </LinearLayout>



        <!--<VideoView-->
            <!--android:id="@+id/vvStepClip"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_marginTop="4dp" />-->

        <TextView
            android:id="@+id/tvTabStepDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTabClips"

            android:layout_marginTop="16dp"

            android:hint="@string/hello_blank_fragment"
            android:padding="12dp" />

    </LinearLayout>


</LinearLayout>