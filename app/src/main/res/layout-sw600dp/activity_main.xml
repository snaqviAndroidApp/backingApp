<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="72dp"
    android:layout_marginBottom="48dp"
    android:layout_marginStart="56dp"
    android:layout_marginEnd="56dp"
    android:orientation="horizontal"
    tools:context=".app.MainActivity">

    <FrameLayout
        android:id="@+id/frMainRecipes_container"
        android:layout_width="wrap_content"
        android:layout_height="797dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/dummyFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/dummyFrame"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frMainRecipes_container"></FrameLayout>

</android.support.constraint.ConstraintLayout>